<div class="mt-6 mb-6 max-w-md sm:max-w-lg lg:max-w-4xl mx-auto">
  <div class="grid gap-6 lg:grid-cols-2">
    <!-- card -->
    <%= for meal <- @meals do %>
    <div class="flex items-center rounded bg-white <%= if is_today?(meal.date), do: "border-indigo-800 border-2", else: "" %> shadow-xl overflow-hidden">
      <div class="justify-center flex w-14 ml-4">
        <h1 class="ml-3 text-5xl font-bold tracking-wide text-indigo-600">
          <%= day_of_week(meal.date) %>
        </h1>
        <p class="text-sm ml-1 text-gray-800 tracking-wide font-semibold underline">
          <%= display_day(meal.date) %>
        </p>
      </div>

      <div class="px-6 py-4">
        <h3 class="text-xl tracking-wider font-bold text-gray-900">
          <%= meal.name %>
        </h3>

        <p class="text-gray-800 text-sm capitalize tracking-wide italic">
          <%= Enum.join(meal.inventory_items,", ") %>
        </p>

        <div class="mt-4">
           <p class="<%= if meal.kids == "Eating at home", do: "text-indigo-600", else: "text-indigo-400" %> font-bold text-sm">
            Kids: <%= meal.kids %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
    <!-- end card -->
</div>
